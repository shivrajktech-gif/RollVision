# Production Environment Configuration for RollVision
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control!

# ============================================
# CRITICAL SECURITY SETTINGS
# ============================================

# Django Secret Key - Generate a new one for production!
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-production-secret-key-here-must-be-unique-and-complex

# Debug Mode - MUST be False in production
DEBUG=False

# Allowed Hosts - Add your production domains
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-ip-address

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL (Recommended for production)
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=rollvision_db
DATABASE_USER=rollvision_user
DATABASE_PASSWORD=your-secure-database-password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# MySQL Alternative
# DATABASE_ENGINE=django.db.backends.mysql
# DATABASE_NAME=rollvision_db
# DATABASE_USER=rollvision_user
# DATABASE_PASSWORD=your-secure-database-password
# DATABASE_HOST=localhost
# DATABASE_PORT=3306

# ============================================
# CACHE & SESSION STORAGE (Redis)
# ============================================

REDIS_URL=redis://localhost:6379/1

# ============================================
# EMAIL CONFIGURATION
# ============================================

# Gmail SMTP (Requires App-Specific Password)
EMAIL_HOST_USER=your-production-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# SendGrid Alternative
# EMAIL_BACKEND=sendgrid_backend.SendgridBackend
# SENDGRID_API_KEY=your-sendgrid-api-key

# ============================================
# SECURITY & MONITORING
# ============================================

# Timezone
TIME_ZONE=Asia/Kolkata

# Sentry Error Tracking (Optional but recommended)
SENTRY_DSN=your-sentry-dsn-here

# Allowed Upload File Types
ALLOWED_IMAGE_TYPES=image/jpeg,image/png

# ============================================
# STATIC & MEDIA FILES
# ============================================

# For production with S3/CloudFront (Optional)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ============================================
# PERFORMANCE SETTINGS
# ============================================

# Gunicorn Workers (2-4 x CPU cores)
WEB_CONCURRENCY=4

# Database Connection Pool
DB_CONN_MAX_AGE=600
